# NBA Analytics - Caddyfile Configuration
# This file configures Caddy as reverse proxy for the NBA Analytics application

# Replace with your actual domain
mareknba.pl {
    # Automatic HTTPS with Let's Encrypt
    
    # Security headers
    header {
        # Security headers
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"  
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:;"
        
        # Remove server signature
        -Server
    }

    # Enable compression
    encode gzip zstd

    # Health check endpoint
    handle /health {
        reverse_proxy localhost:8000
    }

    # Backend API proxy
    handle /api/* {
        reverse_proxy localhost:8000 {
            # Health check for backend
            health_uri /health
            health_interval 30s
            health_timeout 10s
            
            # Load balancing (if multiple backend instances)
            # lb_policy round_robin
            
            # Headers
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    # WebSocket support for development/hot reload
    handle /ws {
        reverse_proxy localhost:5173
    }

    # Static files and frontend SPA
    handle {
        # Try to serve static files first, then fallback to index.html for SPA
        try_files {path} /index.html
        
        # Serve from built frontend (production)
        root * /var/www/nba-analytics/dist
        file_server
        
        # Cache static assets
        @static {
            path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
        }
        header @static {
            Cache-Control "public, max-age=31536000, immutable"
        }
    }

    # Logging
    log {
        output file /var/log/caddy/nba-analytics.log {
            roll_size 10MiB
            roll_keep 5
            roll_keep_for 720h
        }
        format console
    }

    # Rate limiting
    rate_limit {
        zone api {
            key {remote_host}
            events 100
            window 1m
        }
        zone login {
            key {remote_host}  
            events 5
            window 1m
        }
    }
}

# Development/local access (HTTP only)
localhost:80, localhost {
    # Backend API
    handle /api/* {
        reverse_proxy localhost:8000
    }
    
    # Frontend
    handle {
        reverse_proxy localhost:5173
    }
}

# Alternative domain (www redirect)
www.mareknba.pl {
    redir https://mareknba.pl{uri} permanent
}
