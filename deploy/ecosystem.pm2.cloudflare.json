{
  "apps": [
    {
      "name": "nba-backend",
      "script": "./venv/bin/python",
      "args": "-m uvicorn main:app --host 0.0.0.0 --port 8443 --workers 2 --log-level info",
      "cwd": "./backend",
      "env_file": "../backend/.env",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PYTHONPATH": "./backend",
        "TZ": "America/Chicago"
      },
      "log_file": "./logs/nba-backend.log",
      "out_file": "./logs/nba-backend-out.log",
      "error_file": "./logs/nba-backend-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000
    },
    {
      "name": "nba-frontend",
      "script": "npm",
      "args": "run preview -- --host 0.0.0.0 --port 8080",
      "interpreter": "none",
      "cwd": "./",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production"
      },
      "log_file": "./logs/nba-frontend.log",
      "out_file": "./logs/nba-frontend-out.log",
      "error_file": "./logs/nba-frontend-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "restart_delay": 2000,
      "max_restarts": 5,
      "min_uptime": "5s"
    }
  ]
}
